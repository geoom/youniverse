<!-- Main content -->
<div class="section">

  <div class="container">

    <div class="row">

      <% if @products.each do |product| %>

          <div class="col s6 m4 l3">
            <div class="card product-tile">
              <%= link_to product do %>

                  <% if product.featured_model_item.image.exists? %>
                      <div class="card-image waves-effect waves-block waves-light">
                        <%= image_tag product.featured_model_item.image.url(:preview) %>
                      </div>
                  <% end %>

                  <div class="card-content">
                    <p class="product-name grey-text text-darken-4 center-align"><%= product.name %></p>
                    <p class="product-author grey-text text-darken center-align">Por pepito</p>
                  </div>

              <% end %>
            </div>
          </div>
      <% end.empty? %>
          <p> no publications so far :(</p>

      <% end %>

    </div>

  </div>

</div>
<!-- End Main content -->

