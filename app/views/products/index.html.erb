<h1>Listado de productos</h1>

<table>
  <thead>
    <tr>
      <th></th>
      <th>Nombre</th>
      <th>Descripción</th>
      <th>Activo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.design_image.url(:thumb) %></td>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.active %></td>
        <td><%= link_to 'Ver detalle', product %></td>
        <td><%= link_to 'Editar', edit_product_path(product) %></td>
        <td><%= link_to 'Eliminar', product, method: :delete, data: { confirm: 'estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo producto', new_product_path %>
